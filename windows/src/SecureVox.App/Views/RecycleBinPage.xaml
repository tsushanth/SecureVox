<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SecureVox.App.Views.RecycleBinPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="0,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Recycle Bin" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock
                Text="Deleted recordings are kept for 30 days before being permanently removed."
                Style="{StaticResource CaptionTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Deleted recordings list -->
        <Border
            Grid.Row="1"
            Margin="0,20,0,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <ListView x:Name="DeletedList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding Title}" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                <TextBlock
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Deleted:" />
                                    <Run Text="{Binding DeletedAt}" />
                                </TextBlock>
                            </StackPanel>

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource SystemFillColorCautionBrush}">
                                <Run Text="{Binding DaysUntilPermanentDeletion}" />
                                <Run Text="days left" />
                            </TextBlock>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                <Button Content="Restore" Click="Restore_Click" Tag="{Binding}" />
                                <Button Content="Delete" Click="DeletePermanently_Click" Tag="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Empty state (shown when list is empty) -->
        <StackPanel
            x:Name="EmptyState"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="16"
            Visibility="Visible">
            <FontIcon Glyph="&#xE74D;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            <TextBlock
                Text="Recycle bin is empty"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Actions -->
        <Button Grid.Row="2" Content="Empty Recycle Bin" Margin="0,10,0,0" Click="EmptyBin_Click" />
    </Grid>
</Page>
